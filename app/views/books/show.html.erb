<h1><%= @book.title %></h1>
<p><%= @book.description %></p>
<h2>Borrowing History</h2>
<ul>
  <% @lendings.each do |lending| %>
    <li>
      Borrowed by <%= lending.borrower.name %> on <%= lending.borrowed_on %>
      <% if lending.returned_on %>
        , returned on <%= lending.returned_on %>
      <% end %>
    </li>
  <% end %>
</ul>
