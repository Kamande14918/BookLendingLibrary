<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Description:</strong> <%= @book.description %></p>

<h2>Borrowing History</h2>
<ul>
  <% @book.lendings.each do |lending| %>
    <li>
      <strong>Borrower:</strong> <%= lending.borrower.name %> |
      <strong>Borrowed On:</strong> <%= lending.borrowed_on %> |
      <strong>Returned On:</strong> <%= lending.returned_on %>
      <% if lending.returned_on.nil? %>
        | <%= link_to 'Return', return_book_lending_path(@book, lending), method: :patch, data: { confirm: 'Are you sure you want to return this book?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
